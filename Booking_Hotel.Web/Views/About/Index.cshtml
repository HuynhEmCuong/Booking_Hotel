                        <h4 class="title title--h4">Francisco Pena</h4>
                        <span class="title title--overhead-small">Chief Financial Officer</span>
                    </div>
                </div>
            </div>

            <!-- Item person -->
            <div class="col-12 col-md-6 col-lg-4 js-scroll-show">
                <div class="itemPerson">
                    <figure class="itemPerson__img-wrap">
                        <img class="cover lazyload" src="/assets/images/team-person5.jpg" alt="Calvin Flores" />
                    </figure>
                    <div class="itemPerson__details">
                        <h4 class="title title--h4">Calvin Flores</h4>
                        <span class="title title--overhead-small">Asset management</span>
                    </div>
                </div>
            </div>

            <!-- Item person -->
            <div class="col-12 col-md-6 col-lg-4 js-scroll-show">
                <div class="itemPerson">
                    <figure class="itemPerson__img-wrap">
                        <img class="cover lazyload" src="/assets/images/team-person6.jpg" alt="Kathryn Cooper" />
                    </figure>
                    <div class="itemPerson__details">
                        <h4 class="title title--h4">Kathryn Cooper</h4>
                        <span class="title title--overhead-small">Animator</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section CTA -->
    <section class="container section">
        <div class="row cta-simply">
            <div class="col-12 col-lg-7">
                <h2 class="title title--h2">Make room for adventure.</h2>
                <p class="paragraph">Book your room right now and start your amazing adventure full of discoveries and experiences with My Hotel.</p>
                <a href="/loai-phong" class="btn btn__large">Đặt phòng ngay <i class="btn-icon-right icon-arrow-special"></i></a>
            </div>
        </div>
    </section>
</main>
