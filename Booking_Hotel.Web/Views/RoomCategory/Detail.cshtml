                        </li>
                    </ul>
                </div>

                <!-- Gallery slider -->
                    @if (roomCategory.ImageList.SplitImages(";").Length > 0)
                    {
                        <div class="slider-room ltr swiper-container mt-3">
                                            <div class="swiper-wrapper">

                                                @foreach (var item in roomCategory.ImageList.SplitImages(";"))
                                                {
                                                    <div class="swiper-slide">
                                                        <div class="coverSlider js-image" data-image="@item" data-url="@url"></div>
                                                    </div>
                                                }
                                            </div>

                            <!-- Navigation -->
                            <div class="swiper-control swiper-control--bottom">
                                <div class="slash">
                                    <div class="swiper-button-next swiper-button-square">
                                        <i class="icon-chevron-left"></i>
                                    </div>
                                    <div class="swiper-button-prev swiper-button-square">
                                        <i class="icon-chevron-right"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    }


