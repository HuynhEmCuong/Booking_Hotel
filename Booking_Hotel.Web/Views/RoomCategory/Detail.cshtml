@{
    ViewData["Title"] = "Chi tiết loại phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string url = Convert.ToString(ViewBag.Url);
    var roomCategory = ViewBag.RoomCategory as RoomCategoryViewModel;

}

@section metatags {
    <vc:vc-metatag key-word="" description="" />
}
<!-- Content -->
<main class="main">
    <!-- Intro -->
    <section class="intro">
        <div class="intro__bg-wrap">
            <div class="overlay intro__bg js-image js-parallax js-scale-down" data-image="/assets/images/image_room_06.jpg"></div>
        </div>
        <div class="container intro__container">
            <div class="row h-100 align-items-center align-items-center justify-content-center">
                <div class="col-12 col-xl-8 text-center">
                    <span class="title title--overhead text-white js-lines">@roomCategory.Description</span> 
                    <h1 class="title title--display-1 js-lines">@roomCategory.Name</h1>
                </div>
            </div>
        </div>
        <!-- Scroll To -->
        <a class="scroll-to" href="%21.html#content">Scroll<span class="scroll-to__line"></span></a>
    </section>
    <!-- /Intro -->
    <!-- Room base info -->
    <div class="bottom-panel bottom-panelRoom">
        <div class="bottom-panel__wrap">
            <div class="row h-100 align-items-center">
                <div class="col-12 col-md-12 col-xl-8">
                    <div class="row room-details">
                        <div class="col room-details__item slash">
                            <i class="icon-maximize"></i>@roomCategory.Size m²
                        </div>
                        <div class="col room-details__item slash">
                            <i class="icon-bed"></i>@roomCategory.BedType
                        </div>
                        @*<div class="col-4 room-details__item"><i class="icon-bath"></i>2 Bath<span>room</span></div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Room base info -->
    <!-- Content -->
    <section id="content" class="container">
        <div class="row">
            <div class="col-md-12 col-xl-8 order-2 order-xl-1 mt-4 mt-sm-5">
                <!-- Description room -->
                <h3 class="title title--h3">Mô tả</h3>
                <p>@roomCategory.Description</p>

                <!-- Amenity -->
                <h3 class="title title--h3 mt-4 mt-sm-5">Tiện nghi</h3>
                <div class="row">
                    <ul class="list-unstyled list-feature col-12 col-md-4">
